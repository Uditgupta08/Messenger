<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Users</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Search Users</h1>
      </header>
      <main>
        <div class="users-list">
          <% users.forEach(user => { %>
          <div class="user">
            <h3><%= user.username %></h3>
            <p><%= user.fullname %></p>
            <a href="/chat/<%= user._id %>" class="btn">Start Chat</a>
          </div>
          <% }) %>
        </div>
      </main>
    </div>
  </body>
</html>
